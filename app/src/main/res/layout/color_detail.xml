<ScrollView
    android:id="@+id/scroll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:background="#E0E0E0"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.cengalabs.flatui.views.FlatTextView
            android:id="@+id/color_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="40dp"
            android:gravity="center"
            android:textColor="#ffffff"
            flatui:fl_customBackgroundColor="@color/dark_primary"
            flatui:fl_fontFamily="ThaiSansNeue"
            flatui:fl_fontWeight="light"
            flatui:fl_fontExtension="ttf" />

        <info.hoang8f.android.segmented.SegmentedGroup
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/btnAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:text="ฝึกท่าทาง"
                android:textSize="20dp"
                android:checked="true"
                flatui:fl_fontFamily="ThaiSansNeue"
                flatui:fl_fontWeight="light"
                flatui:fl_fontExtension="ttf"
                style="@style/RadioButton"
                />

            <RadioButton
                android:id="@+id/btnSpeak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:text="ฝึกพูด"
                android:textSize="20dp"
                flatui:fl_fontFamily="ThaiSansNeue"
                flatui:fl_fontWeight="light"
                flatui:fl_fontExtension="ttf"
                style="@style/RadioButton"/>

        </info.hoang8f.android.segmented.SegmentedGroup>


            <VideoView
                android:layout_width="320dp"
                android:layout_height="200dp"
                android:id="@+id/videoView"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>


        <info.hoang8f.android.segmented.SegmentedGroup
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/btnTH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_thailand"
                android:drawablePadding="5dp"
                android:text="ไทย"
                android:textSize="20dp"
                android:checked="true"
                flatui:fl_fontFamily="ThaiSansNeue"
                flatui:fl_fontWeight="light"
                flatui:fl_fontExtension="ttf"
                style="@style/RadioButton"/>

            <RadioButton
                android:id="@+id/btnEN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_united_kingdom"
                android:drawablePadding="5dp"
                android:text="อังกฤษ"
                android:textSize="20dp"
                flatui:fl_fontFamily="ThaiSansNeue"
                flatui:fl_fontWeight="light"
                flatui:fl_fontExtension="ttf"
                style="@style/RadioButton"/>

        </info.hoang8f.android.segmented.SegmentedGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">
        <com.cengalabs.flatui.views.FlatTextView
            android:id="@+id/color_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_gravity="left"
            android:background="#0000"
            android:textSize="25dp"
            android:text="ชื่อสี"
            android:layout_margin="2dip"
            android:textColor="#ffffff"
            flatui:fl_customBackgroundColor="@color/dark_primary"
            android:orientation="vertical"
            flatui:fl_fontFamily="ThaiSansNeue"
            flatui:fl_fontWeight="light"
            flatui:fl_fontExtension="ttf"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_margin="2dp"
                android:layout_gravity="right">

            </ImageView>
            <com.cengalabs.flatui.views.FlatTextView
                android:id="@+id/color_exam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_gravity="right"
                android:textSize="25dp"
                android:text="ตัวอย่างสี"
                android:layout_margin="2dp"
                android:textColor="#ffffff"
                flatui:fl_customBackgroundColor="@color/dark_primary"
                android:orientation="vertical"
                flatui:fl_fontFamily="ThaiSansNeue"
                flatui:fl_fontWeight="light"
                flatui:fl_fontExtension="ttf"/>
        </LinearLayout>
    </LinearLayout>
        <com.cengalabs.flatui.views.FlatTextView
            android:id="@+id/color_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_gravity="left"
            android:background="#0000"
            android:textSize="25dp"
            android:text="ประเภทสี"
            android:layout_margin="2dip"
            android:textColor="#ffffff"
            flatui:fl_customBackgroundColor="@color/dark_primary"
            android:orientation="vertical"
            flatui:fl_fontFamily="ThaiSansNeue"
            flatui:fl_fontWeight="light"
            flatui:fl_fontExtension="ttf"/>

        <com.cengalabs.flatui.views.FlatTextView
            android:id="@+id/color_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_gravity="left"
            android:background="#0000"
            android:textSize="25dp"
            android:text="ความหมาย"
            android:layout_margin="2dip"
            android:textColor="#ffffff"
            flatui:fl_customBackgroundColor="@color/dark_primary"
            android:orientation="vertical"
            flatui:fl_fontFamily="ThaiSansNeue"
            flatui:fl_fontWeight="light"
            flatui:fl_fontExtension="ttf"/>


    </LinearLayout>
</ScrollView>
